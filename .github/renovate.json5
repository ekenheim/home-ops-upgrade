{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  // PAT in Mend UI (credentials): needed for private repo API + GHCR image tag lookups
  hostRules: [
    {
      matchHost: 'https://api.github.com/repos/ekenheim/nordic-housing',
      token: '{{ secrets.hempriser }}',
    },
    // GHCR: Renovate discovers new image tags by querying ghcr.io, not api.github.com
    {
      matchHost: 'ghcr.io',
      hostType: 'docker',
      token: '{{ secrets.hempriser }}',
    },
  ],
  extends: [
    ':skipStatusChecks',
    'github>ekenheim/renovate-config',
    'github>ekenheim/renovate-config:autoMerge',
    'github>ekenheim/home-ops-upgrade//.github/renovate/autoMergeDocker.json5',
    'github>ekenheim/home-ops-upgrade//.github/renovate/customManagers.json5',
    'github>ekenheim/home-ops-upgrade//.github/renovate/grafanaDashboards.json5',
    'github>ekenheim/home-ops-upgrade//.github/renovate/groups.json5',
    'github>ekenheim/home-ops-upgrade//.github/renovate/packageRules.json5',
  ],
  ignorePaths: [
    '**/*.sops.*',
    '**/resources/**',
  ],
  flux: {
    managerFilePatterns: [
      '/(^|/)kubernetes/.+\\.ya?ml(?:\\.j2)?$/',
    ],
  },
  'helm-values': {
    managerFilePatterns: [
      '/(^|/)kubernetes/.+\\.ya?ml(?:\\.j2)?$/',
    ],
  },
  kubernetes: {
    managerFilePatterns: [
      '/(^|/)\\.taskfiles/.+\\.ya?ml$/',
      '/(^|/)ansible/.+\\.ya?ml(?:\\.j2)?$/',
      '/(^|/)kubernetes/.+\\.ya?ml$/',
    ],
  },
}
